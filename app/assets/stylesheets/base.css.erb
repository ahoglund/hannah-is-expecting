html {
  position: relative;
  min-height: 100%;
}

body {
  padding-top: 78px;
  margin-bottom: 120px;
}

@media (min-width: 992px) {
  body {
    padding-top: 56px;
  }
}

.bg-image-full {
  background: no-repeat center center scroll;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
  -o-background-size: cover;
}

.bg-image-full h1 {
  background-color: rgba(87, 86, 46, 0.3);
  display: -webkit-inline-box;
  padding: 3px;
}
.navbar {
  padding: 1.4rem;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 120px;
  line-height: 30px; /* Vertically center the text there */
}

.text-success {
  color: #36a97f !important;
}

.text-warning {
  color: #f3866b !important;
}

.text-info {
  color: #174053 !important;
}

#header-image-default {
  background-image: url(<%= asset_path('d-g-1') %>);
  height: 420px;
}
#header-image-default .display-1 {
  font-size: 24px;
}

#header-image-photos {
  background-image: url(<%= asset_path('photos-header') %>);
  min-height: 200px;
}

@media (min-width: 768px) {
  #header-image-default {
    height: 500px;
  }
  #header-image-default .display-1 {
    font-size: 52px;
  }
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
  #header-image-default {
    height: 560px;
  }
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  #header-image-default {
    height: 920px;
  }
}

