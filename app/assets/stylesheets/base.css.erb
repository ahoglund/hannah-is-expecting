html {
  position: relative;
  min-height: 100%;
}

body {
  padding-top: 78px;
  margin-bottom: 120px;
}

@media (min-width: 992px) {
  body {
    padding-top: 56px;
  }
}

.bg-image-full {
  background: no-repeat center center scroll;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
  -o-background-size: cover;
}

.bg-image-full h1 {
  background-color: rgba(87, 86, 46, 0.3);
  display: -webkit-inline-box;
  padding: 3px;
}
.navbar {
  padding: 1.4rem;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 120px;
  line-height: 30px; /* Vertically center the text there */
}

.text-success {
  color: #36a97f !important;
}

.text-warning {
  color: #f3866b !important;
}

.text-info {
  color: #174053 !important;
}

#header-image-default {
  background-image: url(<%= asset_path('d-g-2') %>);
  min-height: 500px;
}

#header-image-photos {
  background-image: url(<%= asset_path('photos-header') %>);
  min-height: 160px;
}
