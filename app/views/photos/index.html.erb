<%= render "photos_header" %>

<div class="container">
  <% @albums.each do |album| %>
    <div class="row">
      <div class="col-sm-12">
        <h1> <%= album.title %> </h1>
        <% album.photos.each do |photo| %>
          <%= image_tag photo.image.variant(resize: "200x200"), class: "float-left img-thumbnail" %>
        <% end %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
